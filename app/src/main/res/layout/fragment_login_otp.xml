<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.LoginOtpFragment">
    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verifying Number"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/text_view_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/text_color"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_1"/>
    <EditText
        android:id="@+id/otp_ed_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_text_bg"
        android:hint="Enter code"
        android:padding="15dp"
        android:inputType="number"
        android:maxLength="4"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_2"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/otp_ed_txt"
        android:background="@drawable/login_text_bg"
        android:backgroundTint="@color/theme_color"
        android:textColor="@color/white"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/resend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/verify_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:text="Resend code"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/timer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/verify_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="1:20 min left"
        android:textColor="@color/text_grey"
        android:textSize="15dp"
        android:padding="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>