<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.AdDetailsActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/frame_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/transparent"
                    app:iss_auto_cycle="true"
                    app:iss_corner_radius="20"
                    app:iss_delay="0"
                    app:iss_error_image="@color/text_grey"
                    app:iss_period="2000"
                    app:iss_placeholder="@color/light_grey" />
                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@drawable/baseline_keyboard_backspace_24"/>
            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_border_bg"
                app:layout_constraintTop_toBottomOf="@+id/frame_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                android:padding="10dp">
                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 36,000"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/heart_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <!--<com.like.LikeButton
                    android:id="@+id/heart_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:icon_type="heart"
                    app:icon_size="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/price_tv"/>-->
                <ImageView
                    android:id="@+id/heart_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/heart_svgrepo_com"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/price_tv"/>
                <TextView
                    android:id="@+id/item_desc_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/heart_button"
                    app:layout_constraintStart_toStartOf="@+id/price_tv"
                    app:layout_constraintEnd_toEndOf="@+id/heart_button"
                    android:text="Hyundai 120, 2013 model, Petrol, 1.5 Litre engine"
                    android:textSize="13sp"
                    android:textColor="@color/text_color"/>
                <ImageView
                    android:id="@+id/loc_icon"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:src="@drawable/outline_location_on_24"
                    app:layout_constraintTop_toBottomOf="@+id/item_desc_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/ad_loc_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/loc_icon"
                    app:layout_constraintStart_toEndOf="@+id/loc_icon"
                    app:layout_constraintEnd_toStartOf="@+id/ad_time_tv"
                    android:text="Narengi, Guwahati, 70016"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp"/>
                <TextView
                    android:id="@+id/ad_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/loc_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Today"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_lay_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/search_border_bg"
                app:layout_constraintTop_toBottomOf="@+id/cons_lay"
                app:layout_constraintStart_toStartOf="@+id/cons_lay"
                app:layout_constraintEnd_toEndOf="@+id/cons_lay"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/linear_lay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Details"
                            android:textSize="16sp"
                            android:textColor="@color/text_color"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mileage"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fuel Type"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NCAP Rating"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Engine"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Speed"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tank Capacity"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_lay_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Details"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Automobile/Car"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blue"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9 km / Litre"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Petrol"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.5 Litre"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120 Km / hr"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 Litre"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"
                            android:textColor="@color/text_grey"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"
                    app:layout_constraintTop_toBottomOf="@+id/linear_lay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"/>
                <TextView
                    android:id="@+id/desc_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/view_1"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/desc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/desc_htv"
                    app:layout_constraintStart_toStartOf="@+id/desc_htv"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:text="A brand new Hyundai i20 car, No accidental report, well maintained, good service record, first owner car. No dent on the body, All paper related to car insurance and registration are avilable."/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/contact_card"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="0dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/contact_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Contact Seller"
            android:textColor="@color/white"
            android:background="#FF771D"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>