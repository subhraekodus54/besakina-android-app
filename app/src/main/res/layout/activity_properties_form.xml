<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.PropertiesFormActivity">
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_keyboard_backspace_24"
        android:layout_margin="10dp"
        android:padding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="Post Ad"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_toRightOf="@+id/back_arrow"
        android:layout_alignTop="@+id/back_arrow"
        android:layout_alignBottom="@+id/back_arrow"
        android:layout_marginStart="5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_card"
        android:layout_below="@+id/back_arrow">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingBottom="20dp"
            android:background="@drawable/sharp_corner_border_bg">
            <TextView
                android:id="@+id/type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Type*"
                android:textColor="@color/text_color"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/apartment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apartments"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/type_tv"
                app:layout_constraintStart_toStartOf="@+id/type_tv"/>
            <TextView
                android:id="@+id/builder_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Builder floors"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/type_tv"
                app:layout_constraintStart_toEndOf="@+id/apartment_tv"
                app:layout_constraintEnd_toStartOf="@+id/farm_tv"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/farm_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm houses"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/type_tv"
                app:layout_constraintStart_toEndOf="@+id/builder_tv"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/villas_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Houses and Villas"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/farm_tv"
                app:layout_constraintStart_toStartOf="@+id/type_tv"/>
            <Spinner
                android:id="@+id/bedrooms_spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@+id/villas_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/sharp_corner_border_bg"/>
            <Spinner
                android:id="@+id/bathrooms_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@+id/bedrooms_spinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/sharp_corner_border_bg"/>
            <TextView
                android:id="@+id/furnishing_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/bathrooms_spinner"
                app:layout_constraintStart_toStartOf="@+id/type_tv"
                android:text="Furnishing*"
                android:textColor="@color/text_color"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/furnished_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Furnished"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/furnishing_tv"
                app:layout_constraintStart_toStartOf="@+id/type_tv"/>
            <TextView
                android:id="@+id/sfurnished_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semi-Furnished"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/furnishing_tv"
                app:layout_constraintStart_toEndOf="@+id/furnished_tv"/>
            <TextView
                android:id="@+id/unfurnished_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unfurnished"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/furnishing_tv"
                app:layout_constraintStart_toEndOf="@+id/sfurnished_tv"/>
            <TextView
                android:id="@+id/construction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/furnished_tv"
                app:layout_constraintStart_toStartOf="@+id/type_tv"
                android:text="Construction Status*"
                android:textColor="@color/text_color"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/new_launch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New launched"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/construction_tv"
                app:layout_constraintStart_toStartOf="@+id/type_tv"/>
            <TextView
                android:id="@+id/ready_to_move_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready to move"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/construction_tv"
                app:layout_constraintStart_toEndOf="@+id/new_launch_tv"/>
            <TextView
                android:id="@+id/under_construction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Under construction"
                android:background="@drawable/sharp_corner_border_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/construction_tv"
                app:layout_constraintStart_toEndOf="@+id/ready_to_move_tv"/>
            <Spinner
                android:id="@+id/listed_by_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:layout_constraintTop_toBottomOf="@+id/new_launch_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/sharp_corner_border_bg"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/built_area_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/sharp_corner_border_bg"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:helperText=""
                app:helperTextTextColor="@color/text_color"
                app:hintTextColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/listed_by_spinner"
                tools:ignore="MissingClass">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/built_area_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Super built area(ft)*"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/carpet_area_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/sharp_corner_border_bg"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:helperText=""
                app:helperTextTextColor="@color/text_color"
                app:hintTextColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/built_area_lay"
                tools:ignore="MissingClass">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/carpet_area_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Super built area(ft)*"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/maintainence_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/sharp_corner_border_bg"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:helperText=""
                app:helperTextTextColor="@color/text_color"
                app:hintTextColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carpet_area_lay"
                tools:ignore="MissingClass">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/maintenance_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Maintenance(monthly)*"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/floors_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/sharp_corner_border_bg"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:helperText=""
                app:helperTextTextColor="@color/text_color"
                app:hintTextColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/maintainence_lay"
                tools:ignore="MissingClass">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/floors_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Total floors*"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
                android:id="@+id/parking_spinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintTop_toBottomOf="@+id/floors_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/sharp_corner_border_bg"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/title_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/sharp_corner_border_bg"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:helperText=""
                app:helperTextTextColor="@color/text_color"
                app:hintTextColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/parking_spinner"
                tools:ignore="MissingClass">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title*"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/desc_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/sharp_corner_border_bg"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:helperText=""
                app:helperTextTextColor="@color/text_color"
                app:hintTextColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_lay"
                tools:ignore="MissingClass">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/desc_txt"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:hint="Description*"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/desc_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/light_grey"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/price_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set a price"
                app:layout_constraintTop_toBottomOf="@+id/view_1"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/text_color"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/price_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/sharp_corner_border_bg"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:helperText=""
                app:helperTextTextColor="@color/text_color"
                app:hintTextColor="@color/text_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/price_htv"
                tools:ignore="MissingClass">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/price_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price*"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/price_lay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/light_grey"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/upload_photo_htv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Upload photos"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/upload_photo_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/upload_photo_htv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:padding="30dp"
                android:background="@drawable/sharp_corner_border_bg"
                android:src="@drawable/outline_add_a_photo_24"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/post_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="10dp">
        <TextView
            android:id="@+id/post_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post My Ad"
            android:background="@color/theme_color"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="20dp"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>