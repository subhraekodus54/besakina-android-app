<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/search_border_bg">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@drawable/search_border_bg">
        <FrameLayout
            android:id="@+id/frame_lay_one"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_gravity="start|bottom"
                android:layout_margin="20dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/verify_img"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/baseline_check_circle_24"
                        app:tint="@color/theme_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/theme_color"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView
            android:id="@+id/price_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/frame_lay_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="â‚¹ 36,000"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/item_desc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hyundai i20 (2013)"
            android:layout_marginEnd="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/price_tv"
            app:layout_constraintStart_toStartOf="@+id/price_tv"
            app:layout_constraintEnd_toEndOf="@+id/price_tv"/>
        <ImageView
            android:id="@+id/loc_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/outline_location_on_24"
            app:tint="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/item_desc_tv"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/price_tv"/>
        <TextView
            android:id="@+id/loc_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/loc_icon"
            app:layout_constraintStart_toEndOf="@+id/loc_icon"
            app:layout_constraintEnd_toStartOf="@+id/time_tv"
            android:text="Bharalumukh, AT Road"
            android:textSize="13sp"
            android:maxLength="12"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            />
        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/loc_icon"
            android:text="Today"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="13dp"
            android:layout_marginEnd="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>